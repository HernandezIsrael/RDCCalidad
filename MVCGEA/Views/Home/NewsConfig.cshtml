        </div>
        <div class="card-content">
            <h4 class="card-title">Modificar el contenido</h4>
            <div class="col-md-12">
                <a href="@Url.Action("Main","Home")" class="btn btn-primary btn-round">Regresar &nbsp;<i class="material-icons">reply</i></a>
                <a class="btn btn-primary btn-round" data-toggle="modal" data-target="#exampleModal">Ver índices y formato de vista &nbsp;<i class="material-icons">remove_red_eye</i></a>
            </div>

            <br />
            <br />
            <br />
            <br />

            <div class="col-md-12">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Tarjeta (índice): @slide1.Orden</h5>

                            @using (Html.BeginForm("UpdateNews", "Home", new { id = slide1.IdItem }))
                            {
                                <div>
                                    <img src="@slide1.Imagen" alt="@slide1.Cabecera" style="resize:horizontal" />
                                </div>

                                <div class="input-group col-md-12">

                                    <label class="control-label" for=@Model.Cabecera> * Título o cabecera</label>

                                    @Html.TextBoxFor(x => x.Cabecera, new { @class = "form-control", @placeholder = "* Título o cabecera", @required = "true", @type = "text", @Value = slide1.Cabecera })
                                    @Html.ValidationMessageFor(x => x.Cabecera, null, new { @class = "badge badge-danger" })

                                </div>

                                <div class="input-group col-md-12">

                                    <label class="control-label" for=@Model.Cabecera> * Detalles de la nota</label>

                                    @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control", @placeholder = "* Detalles de la nota", @required = "true" })
                                    @Html.ValidationMessageFor(x => x.Descripcion, null, new { @class = "badge badge-danger" })

                                </div>

                                <div class="input-group col-md-12">

                                    <label class="control-label" for=@Model.URL> URL de la noticia</label>

                                    @Html.TextBoxFor(x => x.URL, new { @class = "form-control", @placeholder = "URL de la noticia", @type = "text", @Value = slide1.URL })
                                    @Html.ValidationMessageFor(x => x.URL, null, new { @class = "badge badge-danger" })

                                </div>

                                <div class="form-group">

                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(x => x.Mostrar, new { @name = "hola", @checked = true })
                                        </label>
                                        <label class="control-label" for=@Model.Mostrar> *Mostrar noticia</label>
                                    </div>

                                </div>

                                <p class="text-gray">* El campo es obligatorio</p>

                                <button type="submit" class="btn btn-info btn-round">
                                    <i class="material-icons">sd_card</i> Guardar cambios
                                </button>
                            }

                            <br />

                            @using (Html.BeginForm("UploadFile", "Home", new { id = slide1.IdItem }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <h5 class="card-title">Imagen</h5>
                                <label>
                                    Seleccionar imagen en formato ".jpg" o ".png" (Para mejorar el aspecto selecciona imágenes cuyda resolución sea de un formato 16:9 (Por ejemplo 1920 x 1080 pixeles).
                                </label>
                                <br />
                                <div class="fileinput fileinput-new" name="UploadFile" id="UploadItemFile" data-provides="fileinput">
                                    <div>
                                        <span class="btn btn-round btn-primary btn-just-icon btn-file">
                                            <span class="fileinput-new"><i class="material-icons">attach_file</i></span>
                                            <span class="fileinput-exists"><i class="material-icons">done</i></span>
                                            <input type="file" name="file" id="UploadFactura" class="fileinput" />
                                        </span>

                                        <button type="submit" class="btn btn-primary btn-round fileinput-exists">
                                            <i class="material-icons">cloud_upload</i> Subir!
                                        </button>

                                    </div>
                                </div>
                            }

                        </div>

                    </div>
