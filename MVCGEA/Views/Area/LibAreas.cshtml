@model List<Model.CA_Areas>
@{
    ViewBag.Title = "LibAreas";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}
@section Scripts{
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">

    $(document).ready(function() {
        $('#datatables').DataTable({
            "order":[[1,"desc"]],
            "pagingType": "full_numbers",
            "lengthMenu": [
                [10, 25, 50, -1],
                [10, 25, 50, "Todos"]
            ],
            responsive:false,
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Buscar ...",
                "paginate": {
                    "previous": "Anterior",
                    "next": "Siguiente",
                    "first": "Inicial",
                    "last": "Ultimo",

                },
                "lengthMenu": "Mostrando _MENU_ registros",
                "info": "Mostrando _START_ a _END_ de _TOTAL_ registros",
            }

        });


        var table = $('#datatables').DataTable();


        $('.card .material-datatables label').addClass('form-group');




    });

    function llamarVistaParcial(v) {

        var laURLDeLaVista = '@Url.Action("EditBanco", "Area")';
        $.ajax({
            cache: false,
            async: true,
            type: "GET",
            url: laURLDeLaVista,
            data: {id:v},
            success: function (response) {
                $('#resultado').html('');
                $('#resultado').html(response);
            }
        });
    }
        function Woo() {

            $('#myModal').modal('hide');
            setTimeout(function () { window.location.href = '@Url.Action("LibAreas", "Area")'; }, 350);
            
        }

        function onBegin(respuesta){
            console.log(respuesta + 'Bg');
        }
        function onSuccess(respuesta) {
            console.log(respuesta + 'Sc');
        }
        function onComplete(respuesta) {
            console.log(respuesta + 'Cm');
        }
        function onFailure(respuesta) {
            console.log(respuesta + 'Fl');
        }

</script>
    }
<div class="card">
    <div class="card-header card-header-icon" data-background-color="rose">
        <h4 class="card-title">
            <i class="material-icons">
                list
            </i>
            Areas
        </h4>
        <div class="toolbar" ></div>
       
    </div>
    <div class="card-content table-responsive table-full-width material-datatables">
        <table id="datatables" class="table">
            <thead class="text-danger">
               <tr>
                   <th>Acción</th>
                   <th>No</th>
                   <th>Area</th>
                   <th>Activo</th>
                 
                  
               </tr>
            </thead>
            <tbody>
                @foreach (var area in Model) { 
                <tr>
                    <td class="text-primary">

                        <a href="#" onclick="llamarVistaParcial(0)" class="btn btn-simple btn-success btn-icon new" data-toggle="modal" data-target="#myModal">
                            <i class="material-icons"  rel="tooltip" data-placement="right" title="Agregar">add</i>
                        </a>
                        <a href="#" onclick="llamarVistaParcial(@area.Id_CA_Area)" class="btn btn-simple btn-warning btn-icon edit" data-toggle="modal" data-target="#myModal">
                            <i class="material-icons" rel="tooltip" data-placement="right" title="Modificar">create</i>
                          
                        </a>
                    </td>
                    <td>@(area.Id_CA_Area)</td>
                    <td>@(area.Nombre_Area)</td>

                    <td>
                        <div class="togglebutton">
                            <label>

                                @Html.CheckBoxFor(modelitem => area.Activo, new { Value = area.Activo, disabled = "disabled" })
                            </label>
                        </div>
                    </td>
                  
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>


<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="card " role="dialog">
            <div class="card-header card-header-icon" data-background-color="rose">
                <i class="material-icons">work</i>
            </div>

            <div class="card-content" id="resultado">

            </div>

        </div>
    </div>
</div>