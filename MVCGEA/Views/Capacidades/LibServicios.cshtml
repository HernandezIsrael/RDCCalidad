
@model List<Model.Servicios>

@{
    ViewBag.Title = "LibServicios";
    List<Model.SEDocumentosServicios> docs = ViewBag.Docs;
    Model.SEDocumentosServicios servicioDoc = new Model.SEDocumentosServicios();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="gray" style="background:#159D93;">
                <i class="material-icons">
                    important_devices
                </i>
            </div>
            <div class="card-content">
                <h4 class="card-title">Lista de servicios por empresa</h4>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <a href="@Url.Action("NewServicio","Capacidades")" class="btn btn-primary btn-round">Registro de servicio</a>
                <div class="material-datatables">

                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100" style="width:100%">
                        <thead class="text-info">
                            <tr>
                                <th class="disabled-sorting text-center">Editar</th>
                                <th class="text-center">Empresa</th>
                                <th class="text-center">Servicio</th>
                                <th class="text-center">Año</th>
                                <th class="text-center">Mes</th>
                                <th class="text-center">Proveedor</th>
                                <th class="text-center">Referencia</th>
                                <th class="text-center">Estatus</th>
                                <th class="text-center">Día</th>
                                <th class="text-center">Monto</th>
                                <th class="text-center">Moneda</th>
                                <th class="text-center">Comentario</th>
                                <th class="text-center">Dirección</th>
                                <th class="disabled-sorting text-center">Factura</th>
                                <th class="disabled-sorting text-center">XML</th>
                                <th class="disabled-sorting text-center">Comprobante</th>
                                <th class="text-center">F. Alta</th>
                            </tr>
                        </thead>
                        <tfoot class="text-info">
                            <tr>
                                <th class="text-center">Editar</th>
                                <th class="text-center">Empresa</th>
                                <th class="text-center">Servicio</th>
                                <th class="text-center">Año</th>
                                <th class="text-center">Mes</th>
                                <th class="text-center">Proveedor</th>
                                <th class="text-center">Referencia</th>
                                <th class="text-center">Estatus</th>
                                <th class="text-center">Día</th>
                                <th class="text-center">Monto</th>
                                <th class="text-center">Moneda</th>
                                <th class="text-center">Comentario</th>
                                <th class="text-center">Dirección</th>
                                <th class="text-center">Factura</th>
                                <th class="text-center">XML</th>
                                <th class="text-center">Comprobante</th>
                                <th class="text-center">F. Alta</th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var row in Model)
                            {
                                <tr>

                                    <td class="text-center" style="width:3%">
                                        <a href="@Url.Action("NewServicio", "Capacidades", new { id = row.IdServicios })" class="btn btn-simple btn-info btn-icon view">
                                            <i class="material-icons">
                                                border_color
                                            </i>
                                        </a>
                                    </td>
                                    <td class="text-center" style="width:7%">
                                        <a class="text-info" href="@Url.Action("PreviewPDF","Capacidades", new { id = row.Id_Empresa })" target="_blank" rel="tooltip" data-placement="right" title="Ver el reporte de alcance">
                                            <u>@row.Empresas.Razon_Social</u>
                                        </a>
                                    </td>
                                    @switch (row.Id_tipo_servicio)
                                    {
                                        case 1:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">offline_bolt</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 2:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">ring_volume</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 3:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">event_seat</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 4:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">favorite_border</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 5:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">devices</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 1002:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">report_problem</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 1003:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">pan_tool</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 1004:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">perm_device_information</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 1005:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">network_wifi</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 1006:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">local_grocery_store</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 1007:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">local_gas_station</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                        case 1008:
                                            <td class="text-center" style="width:10%">
                                                <i class="material-icons">ev_station</i>
                                                <br />
                                                @row.Ca_Tipo_Servicio.Tipo_Servicio
                                            </td>
                                            break;
                                    }
                                    <td class="text-center" style="width:3%">
                                        @row.Anio.Year
                                    </td>
                                    <td class="text-center" style="width:5%">
                                        @row.Mes.Month
                                    </td>
                                    <td class="text-center" style="width:7%">
                                        @row.Empresas1.Razon_Social
                                    </td>
                                    <td class="text-center" style="width:10%">
                                        @row.NReferencia
                                    </td>
                                    <td class="text-center" style="width:5%">
                                        @if (row.SEEstatusServicios.EstatusServicio == "Pagado")
                                        {
                                            <div class="text-success">
                                                <i class="material-icons" rel="tooltip" data-placement="top" title="Pagado">
                                                    check_box
                                                </i>
                                            </div>
                                        }
                                        else
                                        {

                                            <div class="text-rose">
                                                <i class="material-icons" rel="tooltip" data-placement="top" title="Sin pagar">
                                                    indeterminate_check_box
                                                </i>
                                            </div>
                                        }
                                    </td>
                                    <td class="text-center" style="width:3%">
                                        @row.FCorte.Day
                                    </td>
                                    <td class="text-center" style="width:7%">
                                        @string.Format("$ {0: 0.00}", row.Monto)
                                    </td>
                                    <td class="text-center" style="width:5%">
                                        @row.Ca_Moneda.Moneda
                                    </td>
                                    <td style="width:7%">
                                        @row.Comentario
                                    </td>
                                    <td class="text-center" style="width:7%">
                                        @row.SEDirecciones.Direccion
                                    </td>

                                    <td class="text-center" style="width:5%">
                                        @foreach (var current in docs)
                                        {
                                            if (current.IdServicio == row.IdServicios && current.IdTipoDocumentoServicio == 2)
                                            {
                                                servicioDoc = current;
                                            }
                                        }
                                        <a href='@string.Format("{0}",(row.Factura.Value) ? Url.Action("Download", "Capacidades", new { name = servicioDoc.NombreVirtual, name2 = servicioDoc.Nombre }) : "#")' target='@string.Format("{0}",(row.Factura.Value) ? "_blank" : "" )' class="@string.Format("{0}", (row.Factura.Value)?"btn btn-info btn-just-icon btn-round":"btn btn-rose btn-just-icon btn-round")" rel="tooltip" data-placement="top" title="@string.Format("{0}", (row.Factura.Value)?"Descargar":"No se ha cargado este archivo")">
                                            <i class="material-icons">
                                                file_copy
                                            </i>
                                        </a>
                                    </td>
                                    <td class="text-center" style="width:5%">
                                        @foreach (var current in docs)
                                        {
                                            if (current.IdServicio == row.IdServicios && current.IdTipoDocumentoServicio == 3)
                                            {
                                                servicioDoc = current;
                                            }
                                        }
                                        <a href='@string.Format("{0}",(row.XML.Value) ? Url.Action("Download", "Capacidades", new { name = servicioDoc.NombreVirtual, name2 = servicioDoc.Nombre }) : "#")' target='@string.Format("{0}",(row.XML.Value) ? "_blank" : "" )' class="@string.Format("{0}", (row.XML.Value)?"btn btn-info btn-just-icon btn-round":"btn btn-rose btn-just-icon btn-round")" rel="tooltip" data-placement="top" title="@string.Format("{0}", (row.XML.Value)?"Descargar":"No se ha cargado este archivo")">
                                            <i class="material-icons">
                                                file_copy
                                            </i>
                                        </a>
                                    </td>
                                    <td class="text-center" style="width:5%">
                                        @foreach (var current in docs)
                                        {
                                            if (current.IdServicio == row.IdServicios && current.IdTipoDocumentoServicio == 4)
                                            {
                                                servicioDoc = current;
                                            }
                                        }
                                        <a href='@string.Format("{0}",(row.CPago.Value) ? Url.Action("Download", "Capacidades", new { name = servicioDoc.NombreVirtual, name2 = servicioDoc.Nombre }) : "#")' target='@string.Format("{0}",(row.CPago.Value) ? "_blank" : "" )' class="@string.Format("{0}", (row.CPago.Value)?"btn btn-info btn-just-icon btn-round":"btn btn-rose btn-just-icon btn-round")" rel="tooltip" data-placement="top" title="@string.Format("{0}", (row.CPago.Value)?"Descargar":"No se ha cargado este archivo")">
                                            <i class="material-icons">
                                                file_copy
                                            </i>
                                        </a>
                                    </td>
                                    <td class="text-center" style="width:7%">
                                        @row.FAlta.Value.ToString("dd MMMM yyyy")
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
            <!-- end content-->
        </div>
        <!--  end card  -->
    </div>
</div>

@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $('#datatables').DataTable({
                "order": [[0, "desc"]], //column,type
                "pagingType": "full_numbers",
                "lengthMenu": [
                    [10, 25, 50, -1],
                    [10, 25, 50, "Todos"]
                ],
                responsive: false,
                language: {
                    search: "_INPUT_",
                    lengthMenu: "Mostrar _MENU_ registros",
                    searchPlaceholder: "Buscar", "paginate": { "previous": "Anterior", "next": "Siguiente", "first": "Primero", "last": "Último" },
                    info: "Mostrando _START_ a _END_ registros de _TOTAL_ registros"
                }
            });


            var table = $('#datatables').DataTable();

            $('.card .material-datatables label').addClass('form-group');
        });

    </script>
}

