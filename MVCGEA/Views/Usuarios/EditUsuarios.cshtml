@model Model.Usuarios

@using (Ajax.BeginForm("SaveUsuarios", "Usuarios", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "resultado",
    InsertionMode = InsertionMode.Replace,
    OnBegin = "onBegin",
    OnComplete = "onComplete",
    OnSuccess = "onSuccess",
    OnFailure = "onFailure"


}))
{
    @Html.HiddenFor(x => x.Id_Usuario)
    <h4 class="card-title">Usuario</h4>
    <div class="input-group">
        <span class="input-group-addon">
            Usuario:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </span>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Usuario, new { @class = "form-control", @placeholder = "Usuario" })
            @Html.ValidationMessageFor(x => x.Usuario, null, new { @class = "badge badge-danger" })
        </div>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            Nombre(s):
        </span>
        <div class="form-group">

            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
            @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "badge badge-danger" })

        </div>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            Apellidos:&nbsp;&nbsp;&nbsp;&nbsp;
        </span>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Apellidos, new { @class = "form-control", @placeholder = "Apellidos" })
            @Html.ValidationMessageFor(x => x.Apellidos, null, new { @class = "badge badge-danger" })

        </div>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            E-Mail: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </span>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "E-Mail" })
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "badge badge-danger" })

        </div>
    </div>
            <div class="input-group">
                <span class="input-group-addon">
                    Tipo Usuario:
                </span>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Id_Tipo_Usuario, new { @class = "form-control", @placeholder = "Tipo Usuario" })
                    @Html.ValidationMessageFor(x => x.Id_Tipo_Usuario, null, new { @class = "badge badge-danger" })

                </div>
            </div>
            <div class="input-group">
                <span class="input-group-addon">
                    Area:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </span>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Id_Area, new { @class = "form-control", @placeholder = "Area" })
                    @Html.ValidationMessageFor(x => x.Id_Area, null, new { @class = "badge badge-danger" })

                </div>
            </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        Contraseña:
                    </span>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Pass, new { @class = "form-control", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(x => x.Pass, null, new { @class = "badge badge-danger" })

                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        Activo:
                    </span>
                    <div class="form-group">

                        <div class="togglebutton">
                            <label>
                                @Html.CheckBoxFor(x => x.Activo)
                            </label>
                        </div>

                    </div>
                </div>

                    <button type="submit" class="btn btn-fill btn-rose">Guardar</button>
}


